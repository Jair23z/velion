// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelos para NextAuth (autenticación)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String? // Para email/password auth
  image         String?

  // Datos para facturación
  rfc            String?
  razonSocial    String?
  regimenFiscal  String?
  usoCfdi        String?
  codigoPostal   String?
  calle          String?
  numeroExterior String?
  numeroInterior String?
  colonia        String?
  municipio      String?
  estado         String?
  pais           String? @default("México")

  accounts      Account[]
  sessions      Session[]
  purchases     Purchase[]
  invoices      Invoice[]
  subscriptions Subscription[]
  watchHistory  WatchHistory[]
  favorites     Favorite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Modelos para Velion (Netflix-like)

// Géneros de contenido
model Genre {
  id   String @id @default(cuid())
  name String @unique // Acción, Drama, Comedia, Horror, Sci-Fi, etc
  slug String @unique

  movies Movie[]
  series Series[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Películas
model Movie {
  id          String  @id @default(cuid())
  title       String
  description String? @db.Text
  thumbnail   String? // URL de la imagen/poster (vertical)
  backdrop    String? // URL de la imagen horizontal para hero
  videoUrl    String // URL del video en Supabase Storage
  duration    Int // Duración en segundos (del clip de 10 min)
  year        Int? // Año de lanzamiento
  rating      String? // PG, PG-13, R, etc
  genreId     String

  genre        Genre          @relation(fields: [genreId], references: [id])
  watchHistory WatchHistory[]
  favorites    Favorite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([genreId])
}

// Series
model Series {
  id          String  @id @default(cuid())
  title       String
  description String? @db.Text
  thumbnail   String? // URL de la imagen/poster
  year        Int?
  rating      String?
  genreId     String

  genre   Genre    @relation(fields: [genreId], references: [id])
  seasons Season[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([genreId])
}

// Temporadas de series
model Season {
  id           String  @id @default(cuid())
  seriesId     String
  seasonNumber Int
  title        String?

  series   Series    @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  episodes Episode[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([seriesId, seasonNumber])
  @@index([seriesId])
}

// Episodios
model Episode {
  id            String  @id @default(cuid())
  seasonId      String
  episodeNumber Int
  title         String
  description   String? @db.Text
  thumbnail     String?
  videoUrl      String // URL del video en Supabase Storage
  duration      Int // Duración en segundos

  season       Season         @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  watchHistory WatchHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([seasonId, episodeNumber])
  @@index([seasonId])
}

// Planes de suscripción
model SubscriptionPlan {
  id           String   @id @default(cuid())
  name         String   @unique // "Básico", "Premium", "VIP"
  description  String?  @db.Text
  price        Decimal  @db.Decimal(10, 2) // Precio mensual en MXN
  durationDays Int      @default(30) // Duración en días (30 = mensual)
  features     String[] // ["HD", "2 Dispositivos", "Sin anuncios"]
  isActive     Boolean  @default(true)

  subscriptions Subscription[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Suscripciones de usuarios
model Subscription {
  id     String @id @default(cuid())
  userId String
  planId String

  status    String   @default("active") // "active", "cancelled", "expired", "pending", "refunded"
  startDate DateTime @default(now())
  endDate   DateTime // Fecha de expiración

  // Datos de pago
  paymentMethod  String? // "oxxo", "card", "spei"
  openpayOrderId String? @unique

  // Datos para facturación
  invoiceNumber String? @unique // Folio único para facturar esta suscripción
  invoiceIssued Boolean @default(false) // Si ya se generó factura

  // Datos de cancelación/reembolso
  cancellationReason String? @db.Text // Razón de cancelación proporcionada por el usuario
  cancellationFeedback String? @db.Text // Comentarios adicionales del usuario
  cancelledAt DateTime? // Fecha de cancelación
  refundId String? // ID del refund en Stripe
  refundedAt DateTime? // Fecha del reembolso

  // Relación con factura
  purchaseId String? @unique

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan     SubscriptionPlan @relation(fields: [planId], references: [id])
  purchase Purchase?        @relation(fields: [purchaseId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([endDate])
}

// Historial de visualización
model WatchHistory {
  id        String  @id @default(cuid())
  userId    String
  movieId   String?
  episodeId String?

  progress    Int      @default(0) // Segundos vistos
  completed   Boolean  @default(false)
  lastWatched DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie   Movie?   @relation(fields: [movieId], references: [id], onDelete: Cascade)
  episode Episode? @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, movieId])
  @@unique([userId, episodeId])
  @@index([userId])
}

// Compras/Órdenes (para facturación)
model Purchase {
  id          String  @id @default(cuid())
  userId      String
  amount      Decimal @db.Decimal(10, 2)
  description String // "Suscripción Premium - 1 mes"

  // Datos de pago
  paymentMethod  String // "oxxo", "card", "spei"
  paymentStatus  String  @default("pending") // "pending", "paid", "failed", "cancelled"
  openpayOrderId String? @unique
  oxxoReference  String?

  // Relación con factura
  requiresInvoice Boolean       @default(false)
  invoiceId       String?       @unique
  subscription    Subscription?

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoice Invoice? @relation(fields: [invoiceId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  paidAt    DateTime?

  @@index([userId])
  @@index([paymentStatus])
}

model Invoice {
  id         String  @id @default(cuid())
  userId     String
  purchaseId String? @unique

  // Datos de la factura
  folio    String   @unique
  serie    String?
  fecha    DateTime @default(now())
  subtotal Decimal  @db.Decimal(10, 2)
  iva      Decimal  @db.Decimal(10, 2)
  total    Decimal  @db.Decimal(10, 2)

  // Datos fiscales del receptor
  rfc           String
  razonSocial   String
  regimenFiscal String
  usoCfdi       String
  codigoPostal  String
  domicilio     String?

  // Método de pago
  formaPago  String? // 01, 02, 03, etc.
  metodoPago String? // PUE, PPD

  // Archivos generados
  xmlUrl String? @db.Text
  pdfUrl String?
  uuid   String? @unique // UUID del SAT

  // Status
  status String @default("pending") // pending, issued, cancelled

  user     User      @relation(fields: [userId], references: [id])
  purchase Purchase?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Lista de favoritos (Mi Lista)
model Favorite {
  id      String @id @default(cuid())
  userId  String
  movieId String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, movieId])
  @@index([userId])
  @@index([movieId])
}

// Webhook events processed by the application
model WebhookEvent {
  id          String   @id @default(cuid())
  eventId     String   @unique
  eventType   String
  payload     Json
  processedAt DateTime @default(now())
}
